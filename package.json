{
  "name": "news-buddy",
  "version": "1.0.0",
  "description": "A simple isomorphic react app for reading the news",
  "main": "src/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-server": "nodemon server.js --exec babel-node",
    "start": "yarn build && ./node_modules/.bin/babel-node server.js",
    "watch": "webpack --progress --watch",
    "build": "webpack && yarn build-sass",
    "build-sass": "node-sass --include-path scss static/scss/styles.scss static/css/styles.css",
    "watch-sass": "nodemon -e scss -x \"npm run build-sass\""
  },
  "author": "Noah Manger",
  "license": "ISC",
  "dependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "bulma": "^0.4.1",
    "es6-promise": "^4.1.0",
    "eslint": "^3.19.0",
    "express": "^4.15.2",
    "node-readability": "^2.2.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.3",
    "unfluff": "^1.1.0",
    "webpack": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3"
  }
}
